<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#d9d9d9"/>
            <corners android:radius="2dp"></corners>
        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#f7f6f6"/>
            <corners android:radius="2dp"></corners>

        </shape>
    </item>
</layer-list>

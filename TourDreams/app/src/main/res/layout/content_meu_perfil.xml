<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tourdreams.com.br.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout

        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/app_bar_main"
        android:orientation="vertical"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:text="Minha Conta"
            android:textSize="22dp"
            android:textColor="#fff"
            android:typeface="sans"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="100dp"
            android:paddingLeft="25dp"
            android:layout_marginBottom="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOME"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NÃ­colas Guarino Santana"
                android:id="@+id/edit_nome_cliente"
                android:textColor="#000"
                android:textSize="16dp"/>

            <TextView
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMAIL"/>
            <TextView
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="guarino.nicolas.santana@gmail.com"
                android:textColor="#000"
                android:id="@+id/edit_email_cliente"
                android:textSize="16dp"/>

            <TextView
                android:layout_marginTop="120dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATA DE NASCIMENTO"/>
            <TextView
                android:layout_marginTop="140dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24/07/2000"
                android:textColor="#000"
                android:textSize="16dp"
                android:id="@+id/edit_dt_nasc_cliente"/>


            <TextView
                android:layout_marginTop="180dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TELEFONE"/>
            <TextView
                android:layout_marginTop="200dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(11) 97137-8841"
                android:id="@+id/edit_telefone_cliente"
                android:textColor="#000"
                android:textSize="16dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clique aqui para ver suas reservas"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:textColor="#FFF"

                android:layout_marginRight="20dp"
                android:layout_marginTop="240dp"
                android:id="@+id/btn_acessar_reservas"
                android:layout_gravity="right"
                android:layout_marginBottom="15dp"
                />

        </FrameLayout>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/bolinha_quase_branca"
            android:id="@+id/img_cliente"/>

    </FrameLayout>
</ScrollView>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tourdreams.com.br.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout

        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/app_bar_main"
        android:orientation="vertical"
        android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bolinha"
            android:src="@drawable/bolinha" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nícolas Guarino Santana"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textColor="#353535"
                android:id="@+id/nome_cliente_header"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="guarino.nicolas.santana@gmail.com"
                android:textAlignment="center"
                android:id="@+id/email_cliente_header"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="Você Possui:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_milhas"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Milhas"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:background="@drawable/linha_bottom_clara"/>

    <TextView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dados Pessoais:"
        android:textColor="#171718"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:background="@drawable/linha_bottom"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:background="@drawable/edit_perfil"
        android:id="@+id/edit_nome_cliente"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:weightSum="1">

        <EditText
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/edit_perfil"
            android:id="@+id/edit_dt_nasc_cliente"/>

        <Spinner
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_marginLeft="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:background="@drawable/edit_perfil"
        android:id="@+id/edit_email_cliente"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="      Salvar"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/ic_salvar"
        android:textColor="#FFF"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_salvar_perfil"
        android:layout_gravity="right"
        />

    <TextView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informações para contato:"
        android:textColor="#171718"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:background="@drawable/linha_bottom"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:weightSum="1">

            <EditText
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:textSize="18dp"
                android:id="@+id/edit_telefone_cliente"
                android:background="@drawable/edit_perfil"
                />

            <Spinner
                android:layout_marginLeft="25dp"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:scrollbarSize="18dp"></Spinner>

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clique aqui para ver suas reservas"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:textColor="#FFF"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/btn_acessar_reservas"
            android:layout_gravity="right"
            />


    </LinearLayout>
</ScrollView>
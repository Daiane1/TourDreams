<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:weightSum="1"
    android:background="@drawable/box_shadow"
    >

    <LinearLayout
        android:layout_weight="0.40"
        android:layout_width="0dp"
        android:layout_height="180dp">

        <ImageView
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_produto_busca"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_weight="0.63"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nome_produto_busca"
            android:textSize="18dp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/local_produto_busca"
            android:textColor="#6c6c6c"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:background="@drawable/fotinha_azul_escura"
                android:layout_width="34dp"
                android:layout_height="30dp"
                android:id="@+id/nota_produto_busca"
                android:paddingTop="4dp"
                android:textSize="18dp"
                android:textColor="#fff"
                android:textAlignment="center"/>

            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fantástico"
                android:textSize="18dp"
                android:textColor="#313131"/>
        </LinearLayout>

        <TextView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Só temos mais 4 quartos!"
            android:textColor="#ff00"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="15dp"
            android:text="1 Diária a partir de"
            android:textSize="16dp"
            android:textColor="#313131"
            />

        <TextView
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/preco_produto_busca"
            android:gravity="end"
            android:textSize="22dp"
            android:textColor="#21b300"/>



    </LinearLayout>



</LinearLayout>
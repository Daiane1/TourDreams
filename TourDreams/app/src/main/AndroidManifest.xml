<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tourdreams.com.br">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Checkin" />
        <activity android:name=".Checkout" />
        <activity
            android:name=".DetalhesProduto"
            android:label="@string/title_activity_detalhes_produto"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tourdreams.com.br.MainActivity" />
        </activity>
        <activity
            android:name=".PesquisarProduto"
            android:label="@string/title_activity_pesquisar_produto"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tourdreams.com.br.MainActivity" />
        </activity>
        <activity android:name=".Login" />
        <activity
            android:name=".MeuPerfil"
            android:label="@string/title_activity_meu_perfil"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tourdreams.com.br.MainActivity" />
        </activity>
        <activity
            android:name=".MinhasReservas"
            android:label="@string/title_activity_minhas_reservas"
            android:parentActivityName=".MeuPerfil"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tourdreams.com.br.MeuPerfil" />
        </activity>
        <activity
            android:name=".Mensagens"
            android:label="@string/title_activity_mensagens"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tourdreams.com.br.MainActivity" />
        </activity>
        <activity
            android:name=".Promocoes"
            android:label="@string/title_activity_promocoes"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tourdreams.com.br.MainActivity" />
        </activity>
        <activity
            android:name=".FiltroDeBusca"
            android:label="@string/title_activity_filtro_de_busca"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReservarQuarto"
            android:label="@string/title_activity_reservar_quarto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FinalizarReserva"
            android:label="@string/title_activity_finalizar_reserva"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>